<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/vert"
            tools:context=".REgister">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="15dp"
                app:titleTextColor="@color/white" >
                <Button
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_keyboard_backspace_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:text="@string/app_name"/>
            </androidx.appcompat.widget.Toolbar>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:text="Creer un Compte"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:layout_marginBottom="35dp"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="20dp"
                android:background="@drawable/background1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nom"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="40dp"
                    android:padding="10dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:drawablePadding="10dp"

                    android:elevation="4dp"
                    android:background="@drawable/background"
                    android:drawableStart="@drawable/ic_baseline_person_add_24"
                    android:textSize="16sp"
                    android:hint="Votre nom"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/prenom"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:elevation="4dp"
                    android:background="@drawable/background"
                    android:drawableStart="@drawable/ic_baseline_person_add_24"
                    android:textSize="16sp"
                    android:hint="Votre Prenom"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/adresse"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:elevation="4dp"
                    android:background="@drawable/background"
                    android:drawableStart="@drawable/ic_baseline_account_balance_24"
                    android:textSize="16sp"
                    android:hint="Votre Adresse"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telephone"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:drawablePadding="10dp"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:background="@drawable/background"
                    android:drawableStart="@drawable/ic_baseline_local_phone_24"
                    android:textSize="16sp"
                    android:hint="NumÃ©ro de telephone"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:inputType="textEmailAddress"
                    android:elevation="4dp"
                    android:background="@drawable/background"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:textSize="16sp"
                    android:hint="Adressse email"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:drawablePadding="10dp"
                    android:elevation="4dp"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:background="@drawable/background"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:textSize="16sp"
                    android:hint="Mot de passe"
                    tools:ignore="HardcodedText" />


                   <Spinner
                       android:id="@+id/spinner"
                       android:layout_width="300dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="35dp"
                       android:layout_marginEnd="25dp"
                       android:entries="@array/role"
                       />




                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="25dp"
                    android:text="enregistrer"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:background="@drawable/fbutton"
                    tools:ignore="HardcodedText" />




            </androidx.appcompat.widget.LinearLayoutCompat>






        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</layout>
